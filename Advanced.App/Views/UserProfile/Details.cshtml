@model Advanced.Domain.Entities.User

<section class="text-center p-5 rounded-3 mb-4 hero-section"
         style="background-image: url('images/profile-background.jpg'); background-size: cover; background-position: center;">
    <h1 class="display-4 text-white">Your Profile</h1>
    <p class="lead text-white">Manage your account and personalize your experience.</p>
</section>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 text-center">
            <img src="images/profile.png" class="rounded-circle img-thumbnail mb-3" alt="Profile Picture" style="width: 150px; height: 150px;">
        </div>
        <div class="col-md-8">
            <div class="card p-4 shadow">
                <h3>@Model.Name @Model.Surname</h3>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>City:</strong> Astana</p>
                <p><strong>Phone:</strong> + 777 777 77 77</p>
                <div class="mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary">Back to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
